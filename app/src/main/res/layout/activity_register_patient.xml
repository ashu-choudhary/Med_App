<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pat_activites.Registerpatient">

    <TextView
        android:id="@+id/txt_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_signup"
        android:layout_margin="10dp"
        android:autofillHints=""
        android:hint="@string/enter_Name"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textColorHint="#546E7A"
        android:textSize="17sp"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:layout_margin="10dp"
        android:autofillHints=""
        android:hint="@string/enter_email"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:maxLength="15"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textColorHint="#546E7A"
        android:textSize="17sp"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_email"
        android:layout_margin="10dp"
        android:hint="@string/enter_password"
        android:inputType="textVisiblePassword"
        android:maxLength="15"
        android:maxLines="1"
        android:minHeight="48dp"
        android:textColorHint="#546E7A"
        android:padding="5dp"
        android:textSize="17sp"
        tools:ignore="Autofill,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/et_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_margin="10dp"
        android:autofillHints=""
        android:hint="@string/enter_contact"
        android:inputType="phone"
        android:maxLength="10"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textColorHint="#546E7A"
        android:textSize="17sp"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_mobile"
        android:layout_margin="10dp"
        android:autofillHints=""
        android:hint="@string/enter_address"
        android:inputType="textPostalAddress"
        android:maxLength="15"
        android:maxLines="1"
        android:minHeight="48dp"
        android:textColorHint="#546E7A"
        android:padding="5dp"
        android:textSize="17sp"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/et_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_address"
        android:layout_margin="10dp"
        android:autofillHints=""
        android:hint="@string/enter_age"
        android:inputType="number"
        android:maxLength="3"
        android:maxLines="1"
        android:textColorHint="#546E7A"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textSize="17sp"
        tools:ignore="VisualLintTextFieldSize" />

    <Spinner
        android:id="@+id/genderSpinner"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textSize="17sp"
        android:layout_margin="10dp"
        android:layout_below="@+id/et_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/gender_array" />

    <Spinner
        android:id="@+id/insured"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textSize="17sp"
        android:layout_margin="10dp"
        android:layout_below="@+id/genderSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/insurance" />


    <TextView
        android:id="@+id/txt_regster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_yourself"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="16sp"
        android:padding="5dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="#000000"
        />
</RelativeLayout>