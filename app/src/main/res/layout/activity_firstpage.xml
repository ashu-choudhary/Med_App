<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitie.firstpage"
    android:orientation="horizontal"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/txt_role"
        android:layout_marginBottom="50dp"
        />

    <TextView
        android:id="@+id/txt_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_your_role"
        android:layout_above="@id/btn_patient"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/btn_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/patient"
        android:layout_centerVertical="true"
        android:layout_marginStart="70dp"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/btn_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        android:layout_toEndOf="@id/btn_patient"
        android:text="@string/doctor"/>




</RelativeLayout>